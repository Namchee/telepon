{
  "name": "@namchee/telepon",
  "version": "1.0.2",
  "description": "A simple boilerplate with namchee's style",
  "main": "build/cjs/index.js",
  "module": "build/esm/index.js",
  "browser": "build/umd/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "test": "jest",
    "build": "rm -rf build && npm run build:cjs & npm run build:esm & npm run build:umd & npm run build:declaration",
    "build:cjs": "tsc --project tsconfig.build.json --module commonjs --outDir build/cjs",
    "build:esm": "tsc --project tsconfig.build.json --module es2015 --outDir build/esm",
    "build:umd": "tsc --project tsconfig.build.json --module umd --outDir build/umd",
    "build:declaration": "tsc --project tsconfig.build.json --declaration --emitDeclarationOnly --outDir build",
    "lint": "eslint index.ts __tests__/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Namchee/telepon.git"
  },
  "bugs": {
    "url": "https://github.com/Namchee/telepon/issues"
  },
  "homepage": "https://github.com/Namchee/telepon#readme",
  "keywords": [
    "phone-number",
    "validator",
    "formatter",
    "typescript"
  ],
  "author": {
    "name": "Cristopher Namchee",
    "email": "cristophernamchee12@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@auto-it/npm": "^10.20.6",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "auto": "^10.20.6",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.19.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-jsdoc": "^31.6.1",
    "jest": "^26.6.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.3",
    "ts-node": "^8.10.2",
    "typescript": "^4.2.3",
    "typesync": "^0.8.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
